<% if @issue %>
  $('#related-issues').html('<%= escape_javascript(render :partial => "related_issues") %>');
  $('#related-issue-<%= @issue.id %>').effect("highlight");
  $('#issue_id').focus();
<% else %>
  alert("<%= raw(escape_javascript(l(:label_issue) + ' ' + l('activerecord.errors.messages.invalid'))) %>");
<% end %>
